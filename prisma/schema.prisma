generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MetricType {
  text
  number
  yesno
  grade
  dropdown
}

model Metric {
  id          String   @id @default(cuid())
  key         String   @unique
  label        String
  type         MetricType
  options      Json?    // For dropdown: [{ key: string, label: string }]
  recurrence   Json     // Recurrence pattern configuration
  sortOrder    Int      @default(0)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  entryValues JournalEntryValue[]

  @@index([sortOrder])
  @@index([active])
}

model JournalEntry {
  id        String   @id @default(cuid())
  date      DateTime @unique // Date only (time will be set to 00:00:00)
  values    JournalEntryValue[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}

model JournalEntryValue {
  id        String   @id @default(cuid())
  entryId   String
  entry     JournalEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  metricId  String
  metric    Metric   @relation(fields: [metricId], references: [id], onDelete: Cascade)
  value     Json     // Can store string, number, boolean, etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([entryId, metricId])
  @@index([entryId])
  @@index([metricId])
}
