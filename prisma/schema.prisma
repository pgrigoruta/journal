// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Metric {
  id          String   @id @default(cuid())
  label        String
  categoryId   String
  category     Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  sortOrder    Int      @default(0)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  entryValues JournalEntryValue[]

  @@index([sortOrder])
  @@index([active])
  @@index([categoryId])
}

model JournalEntry {
  id              String   @id @default(cuid())
  date            DateTime @unique // Date only (time will be set to 00:00:00)
  score           Float?   // Calculated total score 0-100
  categoryScores  Json?    // Per-category scores: { categoryId: score }
  values          JournalEntryValue[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([date])
}

model JournalEntryValue {
  id        String   @id @default(cuid())
  entryId   String
  entry     JournalEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  metricId  String
  metric    Metric   @relation(fields: [metricId], references: [id], onDelete: Cascade)
  value     Json     // Can store string, number, boolean, etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([entryId, metricId])
  @@index([entryId])
  @@index([metricId])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  percent   Int      // 0-100
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  metrics   Metric[]

  @@index([name])
}
